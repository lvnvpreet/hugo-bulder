# AI Engine Environment Configuration
# Copy this file to .env and modify values as needed

# Server Configuration
PORT=3002
HOST=0.0.0.0
ENVIRONMENT=development

# Ollama Configuration
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_TIMEOUT=60
OLLAMA_MAX_RETRIES=3

# Model Configuration
DEFAULT_MODEL=llama3.2:3b
CONTENT_MODEL=llama3.2:3b
SEO_MODEL=llama3.2:3b
STRUCTURE_MODEL=llama3.2:3b

# Workflow Configuration
MAX_CONCURRENT_WORKFLOWS=5
WORKFLOW_TIMEOUT=600
ENABLE_BACKGROUND_TASKS=true

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-here
WEBHOOK_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Configuration
MAX_TOKENS=2048
TEMPERATURE=0.7
TOP_P=0.9

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
MODEL_HEALTH_CHECK_INTERVAL=300

# Storage Configuration (if using file storage for state)
STORAGE_PATH=./data
TEMP_PATH=./temp

# Redis Configuration (if using Redis for state management)
# REDIS_URL=redis://localhost:6379
# REDIS_DB=0
# REDIS_PASSWORD=

# Database Configuration (if using database for persistence)
# DATABASE_URL=sqlite:///./ai_engine.db
# DATABASE_POOL_SIZE=10
