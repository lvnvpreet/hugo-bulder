# AI Engine Environment Configuration
# Copy this file to .env and modify values as needed

# ==============================================
# SERVER CONFIGURATION
# ==============================================
HOST=0.0.0.0
PORT=3002
ENVIRONMENT=development
DEBUG=false

# ==============================================
# OLLAMA CONFIGURATION
# ==============================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=300
OLLAMA_MAX_RETRIES=3

# ==============================================
# MODEL CONFIGURATION
# ==============================================
DEFAULT_MODEL=llama3.1:8b
CONTENT_MODEL=llama3.1:8b
SEO_MODEL=llama3.1:8b
STRUCTURE_MODEL=llama3.1:8b

# ==============================================
# GENERATION SETTINGS
# ==============================================
MAX_TOKENS=4000
TEMPERATURE=0.7
TOP_P=0.9

# ==============================================
# SERVICE URLS (Inter-service communication)
# ==============================================
BACKEND_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
HUGO_GENERATOR_URL=http://localhost:3003

# ==============================================
# WORKFLOW CONFIGURATION
# ==============================================
MAX_CONCURRENT_WORKFLOWS=5
WORKFLOW_TIMEOUT=600
ENABLE_BACKGROUND_TASKS=true

# ==============================================
# HEALTH CHECK CONFIGURATION
# ==============================================
HEALTH_CHECK_INTERVAL=30
MODEL_HEALTH_CHECK_INTERVAL=300

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==============================================
# PERFORMANCE CONFIGURATION
# ==============================================
REQUEST_TIMEOUT=300
MAX_REQUEST_SIZE=10485760

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3003
AI_ENGINE_API_KEY=

# ==============================================
# DATABASE CONFIGURATION (Optional)
# ==============================================
# For caching and state management
REDIS_URL=redis://localhost:6379
DATABASE_URL=

# ==============================================
# FILE STORAGE CONFIGURATION
# ==============================================
STORAGE_PATH=./data
TEMP_PATH=./temp

# ==============================================
# RATE LIMITING CONFIGURATION
# ==============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# ==============================================
# MONITORING CONFIGURATION
# ==============================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ==============================================
# DOCKER CONFIGURATION
# ==============================================
# Set this when running in Docker
DOCKER_ENV=false

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================
# Auto-reload on file changes (development only)
RELOAD=true

# Enable detailed debug logging
VERBOSE_LOGGING=false

# ==============================================
# PRODUCTION CONFIGURATION
# ==============================================
# Number of worker processes (production)
WORKERS=1

# Enable access logs
ACCESS_LOG=true

# SSL Configuration (production)
SSL_KEYFILE=
SSL_CERTFILE=