              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"prompt\": \"Professional business office space, modern design, clean lighting\",\n  \"style\": \"professional\",\n  \"size\": \"1024x768\",\n  \"count\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/ai/generate/images",
