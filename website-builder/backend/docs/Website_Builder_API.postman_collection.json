        {
          "name": "Get Hugo Themes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reference/hugo-themes?category=business&style=modern",
              "host": ["{{baseUrl}}"],
              "path": ["reference", "hugo-themes"],
              "query": [
