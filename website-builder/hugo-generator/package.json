{
  "name": "website-builder-hugo-generator",
  "version": "1.0.0",
  "description": "Hugo static site generator service for the website builder",
  "main": "dist/generator.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/generator.ts",
    "build": "tsc",
    "start": "node dist/generator.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.2.0",
    "archiver": "^6.0.1",
    "uuid": "^9.0.1",
    "yaml": "^2.3.4",
    "handlebars": "^4.7.8",
    "axios": "^1.6.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/compression": "^1.7.5",
    "@types/fs-extra": "^11.0.4",
    "@types/archiver": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@types/handlebars": "^4.1.0",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "vitest": "^1.0.4",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2"
